# Multi-arch busybox base image
FROM busybox:musl

# Set working directory
WORKDIR /app

# Expose port for potential future use
EXPOSE 8080

#HealthCheck - simple file check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD test -d /app || exit 1

# Default entrypoint
ENTRYPOINT ["sh", "-c"]

# Default command
CMD ["echo '=== Build Successful ===' && echo 'Image: busybox:musl' && echo 'Status: Running' && echo '=======================' && exec tail -f /dev/null"]
